{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "sum": {
      "type": "integer"
    },
    "delivery": {
      "type": "component",
      "repeatable": false,
      "component": "shared.delivery"
    },
    "deliverySum": {
      "type": "integer"
    },
    "total": {
      "type": "integer"
    },
    "products": {
      "type": "component",
      "repeatable": true,
      "component": "shared.order-product"
    },
    "mail": {
      "type": "email",
      "required": true
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "CREATED",
        "PAID"
      ]
    }
  }
}
